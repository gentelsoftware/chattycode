<body translate="no" >
  <div class="container clearfix">
    <div class="people-list" id="people-list">
      <!-- Search Input -->
      <div class="search"><input type="text" id="search_member" placeholder="search" /><i class="fa fa-search"></i></div>
      <!-- Chatty Member -->
      <ul class="list" id="chatty_member"> <%- locals.member_list %> </ul>
      <!-- End of member list -->
    </div>
    
    <div class="chat">

      <!-- Chat Room Handle -->
      <div class="chat-header clearfix">
        <div class="top row valign-wrapper" style="margin:0px !important;height:100%;">
          <div class="col s10 m10 l10 xl10 valign-wrapper">
            <div class="chat-with valign"><%- locals.room_name %></div>
          </div>
          <div class="col s2 m2 l2 xl2 center-align" style="height:100%;">
            <i class="material-icons center-align" onclick="location.replace('/logout')">arrow_forward</i>
          </div>
        </div>
      </div>
      
      <!-- message body -->
      <div class="chat-history" id="chat-history" >
        <ul id="chatty_list"> <%- locals.messages %> </ul>
      </div>
      <!-- end message body -->

      <!-- Message input -->
      <div class="chat-message clearfix valign-wrapper">
        <input type="hidden" id="chatty_code" value="<%- locals.chattycode %>">
        <input type="hidden" id="user_name" value="<%- locals.user_name %>">
        <input type="hidden" id="user_id" value="<%- locals.user_id %>">
        <textarea name="message-to-send" id="message-to-send" class="valign-wrapper" placeholder ="Type your message"></textarea>    
        <button id="send_message" class="center-align"><i class="material-icons valign">send</i></button>
      </div>
      <!-- end message input -->

    </div> <!-- end chat -->
    <div id="invite_member" class="tools center">
      <form id="invite_form" method="post">
        <input type="text" id="invite_user" placeholder="User Name">
        <input type="text" id="user_number" placeholder="Phone Number">
        <button type="button" class="btn" id="send_code" style="background:#434651;">Send Chat Link</button>
      </form>
    </div>
  </div> <!-- end container -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.1/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
